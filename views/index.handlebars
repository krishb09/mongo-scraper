<div id="wrapper">
    <div class="container">
        <div class="card mb-3">
            <img src="./cnn2.png" class="card-img-top" alt="...">
            <div class="card-body">
                <div class="card text-center">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a class="nav-link" href="/scrape">Scrape</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="/">All Articles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/saved">Saved Articles</a>
                            </li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Articles: </h4>
                        <div id="articles"></div>
                        {{#each articles }}
                        <div class="panel panel-default">
                            <div class="panel-heading" role="tab">
                                <h4 class="panel-title text-center">
                                    <a href="{{this.link }}" target="_blank">{{ this.title }}</a>
                                </h4>
                                <hr>
                                <p class="text-center">
                                    <button type="button" data-id={{this._id}}
                                        class="saveBtn btn btn-block btn-success">
                                        Save Article</button>
                                </p>
                                <form action="/articles" method="POST" id="hidden-form-{{ this.id }}"
                                    class="hidden-xs-up">
                                    <input type="hidden" name="title" value="{{ this.title }}"></input>
                                    <input type="hidden" name="link" value="{{ this.link }}"></input>
                                </form>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>