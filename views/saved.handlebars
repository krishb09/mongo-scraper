<div id="wrapper">
    <div class="container">
        <div class="card mb-3">
            <img src="./cnn2.png" class="card-img-top" alt="...">
            <div class="card-body">
                <div class="card text-center">
                    <div class="card-header">
                        <ul class="nav nav-tabs card-header-tabs">
                            <li class="nav-item">
                                <a class="nav-link" href="/scrape">Scrape</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/">All Articles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="/saved">Saved Articles</a>
                            </li>
                        </ul>
                    </div>
                    {{!-- <div class="card-body"> --}}
                    <h4 class="card-title"> Saved Articles: </h4>
                    <div id="articles"></div>
                    {{#each articles}}
                    <div class="card-body">
                        <div class="panel panel-default">
                            <div class="panel-heading" role="tab">
                                <h4 class="panel-title text-center">
                                    <a href="{{this.link }}" target="_blank">{{ this.title }}</a>
                                </h4>
                                <p>
                                    <button type="button" id="modalBtn" data-id="{{_id}}" data-toggle="modal"
                                        data-target="#modalNote{{_id}}" class="btn btn-block btn-warning">
                                        Create Note</button>
                                    <button type="button" id="modalBtn" data-id="{{_id}}" data-toggle="modal"
                                        data-target="#viewNote{{_id}}" class="viewNote btn btn-block btn-secondary">
                                        View Note</button>
                                </p>
                                <hr>
                            </div>
                        </div>
                    </div>
                    <!-- Modal -->
                    <div class="modal fade" id="modalNote{{_id}}" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <textarea id="inputNote"></textarea>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" data-dismiss="modal" data-id="{{_id}}"
                                        class="saveNote btn btn-primary">Save
                                        changes</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Modal 2 View Note -->
                    {{!-- has to be diffrent id for each modal toggle --}}
                    <div class="modal fade" id="viewNote{{_id}}" tabindex="-1" role="dialog" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title notes"  data-id="{{_id}}"> {{note.body}} </h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>